<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/iv_jobImage"
           android:layout_width="@dimen/_50sdp"
           android:layout_height="@dimen/_50sdp"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:scaleType="centerCrop"
           android:src="@drawable/amazon" />

       <TextView
           android:id="@+id/tv_jobTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/_12ssp"
           android:layout_marginTop="@dimen/_5sdp"
           android:layout_toEndOf="@+id/iv_jobImage"
           android:fontFamily="sans-serif-medium"
           android:text="Manager"
           android:textColor="@color/black"
           android:textSize="@dimen/_15sdp" />

       <TextView
           android:id="@+id/tv_companyName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_jobTitle"
           android:layout_marginStart="@dimen/_12ssp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_toEndOf="@+id/iv_jobImage"
           android:fontFamily="sans-serif"
           android:text="IBM"
           android:textColor="#757577"
           android:textSize="@dimen/_12sdp" />
       <TextView
           android:id="@+id/tv_extra"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif"
           android:text="-"
           android:layout_toEndOf="@+id/tv_companyName"
           android:layout_below="@+id/tv_jobTitle"
           android:textSize="@dimen/_12sdp"
           android:textColor="#757577"
           android:layout_marginStart="@dimen/_2ssp"
           android:layout_marginTop="@dimen/_10sdp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif"
           android:text="BBSR"
           android:id="@+id/tv_jobLocation"
           android:layout_toEndOf="@+id/tv_extra"
           android:layout_below="@+id/tv_jobTitle"
           android:textSize="@dimen/_12sdp"
           android:textColor="#757577"
           android:layout_marginStart="@dimen/_2ssp"
           android:layout_marginTop="@dimen/_10sdp"/>

       <TextView
           android:id="@+id/tv_exp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="@dimen/_12sdp"
           android:layout_marginTop="@dimen/_12sdp"
           android:layout_marginEnd="@dimen/_12sdp"
           android:layout_marginBottom="@dimen/_12sdp"
           android:background="@drawable/bg_job"
           android:padding="@dimen/_3sdp"
           android:paddingStart="@dimen/_6sdp"
           android:paddingEnd="@dimen/_6sdp"
           android:text="@string/_2_months"
           android:textColor="@color/black"
           android:textSize="@dimen/_10sdp" />

   </RelativeLayout>

</androidx.cardview.widget.CardView>